{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3SyncDocs",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::${BUCKET_NAME}"
    },
    {
      "Sid": "S3ObjectRW",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:PutObjectAcl",
        "s3:AbortMultipartUpload",
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::${BUCKET_NAME}/*"
    },
    {
      "Sid": "QBusinessSync",
      "Effect": "Allow",
      "Action": [
        "qbusiness:StartDataSourceSyncJob",
        "qbusiness:ListDataSourceSyncJobs"
      ],
      "Resource": "*"
    },
    {
      "Sid": "KmsForS3Export",
      "Effect": "Allow",
      "Action": [
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:DescribeKey"
      ],
      "Resource": "${KMS_KEY_ARN}"
    },
    {
      "Sid": "CodePipelineControl",
      "Effect": "Allow",
      "Action": [
        "codepipeline:StartPipelineExecution",
        "codepipeline:GetPipelineExecution"
      ],
      "Resource": "${CODEPIPELINE_RESOURCE}"
    }
  ]
}
