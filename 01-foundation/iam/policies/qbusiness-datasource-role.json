{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ReadAccessVaultMeshKB",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::vaultmesh-knowledge-base",
        "arn:aws:s3:::vaultmesh-knowledge-base/*"
      ]
    },
    {
      "Sid": "QBusinessBatchPutDocument",
      "Effect": "Allow",
      "Action": [
        "qbusiness:BatchPutDocument",
        "qbusiness:BatchDeleteDocument"
      ],
      "Resource": "*"
    },
    {
      "Sid": "KMSDecryptIfNeeded",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey"
      ],
      "Resource": "*"
    }
  ]
}

