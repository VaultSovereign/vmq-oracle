{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ReadOnlyForConnector",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::${BUCKET_NAME}",
        "arn:aws:s3:::${BUCKET_NAME}/*"
      ]
    },
    {
      "Sid": "QBusinessIngestion",
      "Effect": "Allow",
      "Action": [
        "qbusiness:BatchPutDocument",
        "qbusiness:BatchDeleteDocument"
      ],
      "Resource": [
        "arn:aws:qbusiness:${REGION}:${ACCOUNT_ID}:application/${APP_ID}/index/${INDEX_ID}"
      ]
    },
    {
      "Sid": "KmsDecryptForQBusiness",
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey"
      ],
      "Resource": "${KMS_KEY_ARN}"
    }
  ]
}
